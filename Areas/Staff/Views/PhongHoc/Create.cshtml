@model DoAnCoSo_Web.Models.PhongHoc
@{
    ViewData["Title"] = "Thêm phòng học";
}

<h2>Thêm phòng học</h2>

<form asp-action="Create" method="post">
    <div class="mb-3">
        <label asp-for="TenPhongHoc" class="form-label">Tên phòng học</label>
        <input asp-for="TenPhongHoc" class="form-control" />
        <span asp-validation-for="TenPhongHoc" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="SucChua" class="form-label">Sức chứa</label>
        <input asp-for="SucChua" class="form-control" type="number" min="1" />
        <span asp-validation-for="SucChua" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-success">Thêm</button>
    <a asp-action="Index" class="btn btn-secondary">Hủy</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
