@model IEnumerable<DoAnCoSo_Web.Models.PhongHoc>
@{
    ViewData["Title"] = "Danh sách phòng học";
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/5.3.0/css/bootstrap.min.css">
<link rel="stylesheet" href="https://cdn.datatables.net/2.2.2/css/dataTables.bootstrap5.css">
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet">

<style>
    .page-header {
        background: linear-gradient(135deg, #e83e8c 0%, #c9236b 100%);
        color: white;
        padding: 24px 30px;
        border-radius: 12px;
        margin-bottom: 24px;
        box-shadow: 0 4px 15px rgba(232, 62, 140, 0.3);
    }
    .page-header h2 { margin: 0; font-weight: 700; }
    .page-header p { margin: 8px 0 0; opacity: 0.9; }
    .card-table {
        background: white;
        border-radius: 12px;
        box-shadow: 0 2px 12px rgba(0,0,0,0.08);
        padding: 24px;
    }
    .table thead th {
        background: #e9ecef;
        color: #212529;
        font-weight: 600;
        border: none;
        padding: 14px 12px;
        text-align: left !important;
    }
    .table tbody td {
        padding: 14px 12px;
        vertical-align: middle;
        text-align: left !important;
    }
    .table tbody tr:hover { background-color: #f8f9fa; }
    .btn-back {
        background: white;
        color: #6c757d;
        border: 1px solid #dee2e6;
        padding: 8px 16px;
        border-radius: 8px;
        font-weight: 500;
        transition: all 0.2s;
    }
    .btn-back:hover { background: #f8f9fa; color: #495057; }
    .btn-action {
        padding: 8px 16px;
        border-radius: 6px;
        font-weight: 500;
        font-size: 0.9rem;
        margin: 2px;
        transition: all 0.2s;
    }
    .btn-action:hover { transform: translateY(-1px); }
    .btn-add {
        background: linear-gradient(135deg, #e83e8c 0%, #c9236b 100%);
        border: none;
        padding: 12px 24px;
        border-radius: 8px;
        font-weight: 600;
        color: white;
        transition: all 0.2s;
    }
    .btn-add:hover {
        transform: translateY(-2px);
        box-shadow: 0 4px 12px rgba(232, 62, 140, 0.4);
        color: white;
    }
    .capacity-badge {
        background: #e3f2fd;
        color: #1565c0;
        padding: 6px 14px;
        border-radius: 20px;
        font-weight: 600;
    }
    .room-name {
        display: flex;
        align-items: center;
        gap: 10px;
    }
    .room-icon {
        width: 40px;
        height: 40px;
        background: linear-gradient(135deg, #e83e8c 0%, #c9236b 100%);
        border-radius: 8px;
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
    }
</style>

<div class="container-fluid py-4">
    <a asp-action="Index" asp-controller="StaffHome" class="btn btn-back mb-3">
        <i class="fa-solid fa-arrow-left me-2"></i>Quay lại
    </a>

    <div class="page-header">
        <h2><i class="fa-solid fa-door-open me-2"></i>Danh sách phòng học</h2>
    </div>

    <div class="card-table">
        <table id="example" class="table table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>Tên phòng học</th>
                    <th>Sức chứa</th>
                    <th>Chức năng</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var phong in Model)
                {
                    <tr>
                        <td>
                            <div class="room-name">
                                <div class="room-icon">
                                    <i class="fa-solid fa-chalkboard"></i>
                                </div>
                                <strong>@phong.TenPhongHoc</strong>
                            </div>
                        </td>
                        <td><span class="capacity-badge"><i class="fa-solid fa-user me-1"></i>@phong.SucChua người</span></td>
                        <td>
                            <a asp-area="Staff" asp-controller="PhongHoc" asp-action="Edit" asp-route-id="@phong.MaPhongHoc" class="btn btn-outline-primary btn-action">
                                <i class="fa-solid fa-pen-to-square me-1"></i>Sửa
                            </a>
                            <button class="btn btn-outline-danger btn-action" onclick="xoa(@phong.MaPhongHoc,this)">
                                <i class="fa-solid fa-trash me-1"></i>Xóa
                            </button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        <div class="mt-4">
            <a asp-action="Create" class="btn btn-add">
                <i class="fa-solid fa-plus me-2"></i>Thêm phòng học
            </a>
        </div>
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.7.1.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
<script src="https://cdn.datatables.net/2.2.2/js/dataTables.js"></script>
<script src="https://cdn.datatables.net/2.2.2/js/dataTables.bootstrap5.js"></script>
<script>
    new DataTable('#example', {
        columnDefs: [
            { targets: 0, searchable: true },
            { targets: [1, 2], searchable: false }
        ],
        language: {
            search: "<i class='fa-solid fa-search'></i> Tìm kiếm:",
            lengthMenu: "Hiển thị _MENU_ dòng",
            info: "Hiển thị _START_ đến _END_ của _TOTAL_ dòng",
            paginate: { previous: "Trước", next: "Sau" },
            zeroRecords: "Không tìm thấy kết quả phù hợp"
        }
    });

    function xoa(id, element) {
        if (!confirm("Bạn có chắc chắn muốn xóa phòng học này không?")) return;
        $.ajax({
            url: `/Staff/PhongHoc/Delete`,
            type: "POST",
            data: { id: id },
            success: function (response) {
                if (response.success) {
                    $(element).closest("tr").fadeOut(500, function () { $(this).remove(); });
                } else {
                    alert("Không thể xóa phòng học này!");
                }
            },
            error: function () { alert("Lỗi khi xóa phòng học!"); }
        });
    }
</script>
