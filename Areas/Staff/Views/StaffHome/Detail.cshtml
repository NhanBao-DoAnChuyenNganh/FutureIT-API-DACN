@model DoAnCoSo_Web.Models.TinTucTuyenDung
<!doctype html>
<html class="no-js" lang="zxx">
<head>
	<meta charset="utf-8">
	<meta http-equiv="x-ua-compatible" content="ie=edge">
	<title> Education | Template </title>
	<meta name="description" content="">
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<link rel="shortcut icon" type="image/x-icon" href="assets/img/favicon.ico">

	<!-- CSS here -->
	<link rel="stylesheet" href="~/css/bootstrap.min.css">
	<link rel="stylesheet" href="~/css/owl.carousel.min.css">
	<link rel="stylesheet" href="~/css/slicknav.css">
	<link rel="stylesheet" href="~/css/animate.min.css">
	<link rel="stylesheet" href="~/css/magnific-popup.css">
	<link rel="stylesheet" href="~/css/fontawesome-all.min.css">
	<link rel="stylesheet" href="~/css/themify-icons.css">
	<link rel="stylesheet" href="~/css/slick.css">
	<link rel="stylesheet" href="~/css/nice-select.css">
	<link rel="stylesheet" href="~/css/style.css">
</head>
<body>
	<div class="slider-area ">
		<div class="slider-height2 d-flex align-items-center">
			<div class="container">
				<div class="row">
					<div class="col-xl-12">
						<div class="hero-cap hero-cap2 text-center">
							<h2>Chi Tiết Tin Tức </h2>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
	<!--================Blog Area =================-->
	<section class="blog_area single-post-area section-padding">
		<div class="container">
			<div class="row justify-content-center">
				<div class="col-lg-10 posts-list">
					<div class="single-post">
						<div class="feature-img text-center">
							<img class="img-fluid" src="data:image/png;base64,@Convert.ToBase64String(Model.HinhTinTuc)" alt="Hình tin tức">
						</div>
						<div class="blog_details">
							<h2 style="color: #2d2d2d;">@Model.TieuDeTinTuc</h2>
							<ul class="blog-info-link mt-3 mb-4">
								<li><i class="fa fa-calendar"></i> Ngày đăng: @Model.NgayDang.ToString("dd/MM/yyyy")</li>
								<li><i class="fa fa-clock"></i> Kết thúc: @Model.NgayKetThuc.ToString("dd/MM/yyyy")</li>
							</ul>
							<p class="excert">
								@Html.Raw(Model.NoiDungTinTuc)
							</p>
						</div>
					</div>
				</div>
			</div>
		</div>
		<a asp-action="TinTucTuyenDung" class="btn btn-secondary">Quay lại</a>
	</section>
</body>
