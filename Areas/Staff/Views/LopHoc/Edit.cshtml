@model DoAnCoSo_Web.Models.LopHoc

@{
    ViewData["Title"] = "Chỉnh sửa lớp học";
}

<h1>@ViewData["Title"]</h1>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="MaLopHoc" />
    <div class="form-group">
        <label for="TenLopHoc">Tên lớp học</label>
        <input type="text" asp-for="TenLopHoc" class="form-control" />
        <span asp-validation-for="TenLopHoc" class="text-danger"></span>
    </div>

    <div class="form-group row">
        <label for="KhoaHocMaKhoaHoc" class="col-sm-2 col-form-label">Khóa học</label>
        <div class="col-sm-10">
            <select asp-for="KhoaHocMaKhoaHoc" class="form-control" asp-items="@(new SelectList(ViewBag.KhoaHocList, "MaKhoaHoc", "TenKhoaHoc"))">
                <option value="">-- Chọn khóa học --</option>
            </select>
            <span asp-validation-for="KhoaHocMaKhoaHoc" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label for="PhongHocMaPhongHoc" class="col-sm-2 col-form-label">Phòng học</label>
        <div class="col-sm-10">
            <select asp-for="PhongHocMaPhongHoc" class="form-control" asp-items="@(new SelectList(ViewBag.PhongHocList, "MaPhongHoc", "TenPhongHoc"))">
                <option value="">-- Chọn phòng học --</option>
            </select>
            <span asp-validation-for="PhongHocMaPhongHoc" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <label for="NgayKhaiGiang">Ngày khai giảng</label>
        <input type="date" asp-for="NgayKhaiGiang" class="form-control" />
        <span asp-validation-for="NgayKhaiGiang" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="NgayKetThuc">Ngày kết thúc</label>
        <input type="date" asp-for="NgayKetThuc" class="form-control" readonly/>
        <span asp-validation-for="NgayKetThuc" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Lưu</button>
    <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
</form>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        $(document).ready(function () {
            $('#NgayKhaiGiang').on('change', function () {
                var ngayKhaiGiang = $(this).val();
                var maKhoaHoc = $('#KhoaHocMaKhoaHoc').val(); // input select hoặc hidden

                if (ngayKhaiGiang && maKhoaHoc) {
                    $.ajax({
                        url: '/Staff/LopHoc/TinhNgayKetThuc',
                        type: 'GET',
                        data: {
                            maKhoaHoc: maKhoaHoc,
                            ngayKhaiGiang: ngayKhaiGiang
                        },
                        success: function (res) {
                            $('#NgayKetThuc').val(res.ngayKetThuc);
                        },
                        error: function () {
                            alert("Không thể tính ngày kết thúc");
                        }
                    });
                }
            });
        });
    </script>
}
