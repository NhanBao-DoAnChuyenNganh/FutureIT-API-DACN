@model DoAnCoSo_Web.Areas.Staff.ViewModels.DanhSachKhoaHocViewModel
@{
    ViewData["Title"] = "Danh sách khóa học và phiếu đăng ký";
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/5.3.0/css/bootstrap.min.css">
<link rel="stylesheet" href="https://cdn.datatables.net/2.2.2/css/dataTables.bootstrap5.css">
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet">

<style>
    .page-header {
        background: linear-gradient(135deg, #20c997 0%, #0ca678 100%);
        color: white;
        padding: 24px 30px;
        border-radius: 12px;
        margin-bottom: 24px;
        box-shadow: 0 4px 15px rgba(32, 201, 151, 0.3);
    }
    .page-header h2 { margin: 0; font-weight: 700; }
    .page-header p { margin: 8px 0 0; opacity: 0.9; }
    .card-table {
        background: white;
        border-radius: 12px;
        box-shadow: 0 2px 12px rgba(0,0,0,0.08);
        padding: 24px;
    }
    .table thead th {
        background: #e9ecef;
        color: #212529;
        font-weight: 600;
        border: none;
        padding: 14px 12px;
        text-align: left !important;
    }
    .table tbody td {
        padding: 14px 12px;
        vertical-align: middle;
        text-align: left !important;
    }
    .table tbody tr:hover { background-color: #f8f9fa; }
    .btn-back {
        background: white;
        color: #6c757d;
        border: 1px solid #dee2e6;
        padding: 8px 16px;
        border-radius: 8px;
        font-weight: 500;
        transition: all 0.2s;
    }
    .btn-back:hover { background: #f8f9fa; color: #495057; }
    .nav-tabs {
        border-bottom: 2px solid #dee2e6;
        margin-bottom: 20px;
    }
    .nav-tabs .nav-link {
        border: none;
        color: #6c757d;
        font-weight: 600;
        padding: 12px 24px;
        border-radius: 8px 8px 0 0;
        transition: all 0.2s;
    }
    .nav-tabs .nav-link:hover {
        background: #f8f9fa;
        color: #495057;
    }
    .nav-tabs .nav-link.active {
        background: linear-gradient(135deg, #20c997 0%, #0ca678 100%);
        color: white;
        border: none;
    }
    .badge-count {
        background: #fff3cd;
        color: #856404;
        padding: 6px 14px;
        border-radius: 20px;
        font-weight: 700;
        font-size: 1rem;
    }
    .badge-count-done {
        background: #d4edda;
        color: #155724;
    }
    .btn-action {
        padding: 8px 16px;
        border-radius: 6px;
        font-weight: 500;
        font-size: 0.85rem;
        margin: 2px;
        transition: all 0.2s;
    }
    .btn-action:hover { transform: translateY(-1px); }
    .btn-add {
        background: linear-gradient(135deg, #20c997 0%, #0ca678 100%);
        border: none;
        padding: 12px 24px;
        border-radius: 8px;
        font-weight: 600;
        color: white;
        transition: all 0.2s;
        margin-right: 10px;
    }
    .btn-add:hover {
        transform: translateY(-2px);
        box-shadow: 0 4px 12px rgba(32, 201, 151, 0.4);
        color: white;
    }
    .action-buttons { display: flex; flex-wrap: wrap; gap: 6px; }
</style>

<div class="container-fluid py-4">
    <a asp-action="Index" asp-controller="StaffHome" class="btn btn-back mb-3">
        <i class="fa-solid fa-arrow-left me-2"></i>Quay lại
    </a>

    <div class="page-header">
        <h2><i class="fa-solid fa-file-signature me-2"></i>Phiếu đăng ký khóa học</h2>
    </div>

    <div class="card-table">
        <!-- Tab Navigation -->
        <ul class="nav nav-tabs" id="myTab" role="tablist">
            <li class="nav-item" role="presentation">
                <a class="nav-link active" id="chuaXepLop-tab" data-bs-toggle="tab" href="#chuaXepLop" role="tab">
                    Phiếu chờ xử lý
                </a>
            </li>
            <li class="nav-item" role="presentation">
                <a class="nav-link" id="daXepLop-tab" data-bs-toggle="tab" href="#daXepLop" role="tab">
                    Phiếu đã xếp lớp
                </a>
            </li>
        </ul>

        <!-- Tab Content -->
        <div class="tab-content" id="myTabContent">
            <!-- Tab 1: Phiếu Chờ Xử Lý -->
            <div class="tab-pane fade show active" id="chuaXepLop" role="tabpanel">
                <table id="exampleChuaXepLop" class="table table-striped" style="width:100%">
                    <thead>
                        <tr>
                            <th>Tên khóa học</th>
                            <th>Ngày học</th>
                            <th>Số phiếu chờ</th>
                            <th>Thao tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.DanhSachChuaXepLop)
                        {
                            <tr>
                                <td><strong>@item.TenKhoaHoc</strong></td>
                                <td>@item.NgayHoc</td>
                                <td><span class="badge-count">@item.SoLuongPhieuDangKy</span></td>
                                <td>
                                    <div class="action-buttons">
                                        <a href="@Url.Action("XepLop", "PhieuDangKyKhoaHoc", new { maKhoaHoc = item.MaKhoaHoc })" class="btn btn-success btn-action">
                                            <i class="fa-solid fa-user-plus me-1"></i>Xếp lớp
                                        </a>
                                        <a asp-controller="PhieuDangKyKhoaHoc" asp-action="DanhSachPhieuDangKyChoXuLy" asp-route-maKhoaHoc="@item.MaKhoaHoc" class="btn btn-primary btn-action">
                                            <i class="fa-solid fa-list me-1"></i>Xem DS
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <!-- Tab 2: Phiếu Đã Xếp Lớp -->
            <div class="tab-pane fade" id="daXepLop" role="tabpanel">
                <table id="exampleDaXepLop" class="table table-striped" style="width:100%">
                    <thead>
                        <tr>
                            <th>Tên khóa học</th>
                            <th>Ngày học</th>
                            <th>Số phiếu đã xếp</th>
                            <th>Thao tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.DanhSachDaXepLop)
                        {
                            <tr>
                                <td><strong>@item.TenKhoaHoc</strong></td>
                                <td>@item.NgayHoc</td>
                                <td><span class="badge-count badge-count-done">@item.SoLuongPhieuDangKy</span></td>
                                <td>
                                    <a asp-controller="PhieuDangKyKhoaHoc" asp-action="DanhSachPhieuDangKyDaXepLop" asp-route-maKhoaHoc="@item.MaKhoaHoc" class="btn btn-primary btn-action">
                                        <i class="fa-solid fa-list me-1"></i>Xem danh sách
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>

        <div class="mt-4">
            <a href="@Url.Page("/Students/AddStudent", new { area = "Staff" })" class="btn btn-add">
                Thêm học viên
            </a>
            <a asp-controller="PhieuDangKyKhoaHoc" asp-action="ThemPhieuDangKyTheoGmail" class="btn btn-add">
                Tìm Gmail & thêm phiếu
            </a>
        </div>
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.7.1.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
<script src="https://cdn.datatables.net/2.2.2/js/dataTables.js"></script>
<script src="https://cdn.datatables.net/2.2.2/js/dataTables.bootstrap5.js"></script>
<script>
    new DataTable('#exampleChuaXepLop', {
        columnDefs: [
            { targets: 0, searchable: true },
            { targets: [1, 2], searchable: false }
        ],
        language: {
            search: "<i class='fa-solid fa-search'></i> Tìm kiếm:",
            lengthMenu: "Hiển thị _MENU_ dòng",
            info: "Hiển thị _START_ đến _END_ của _TOTAL_ dòng",
            paginate: { previous: "Trước", next: "Sau" },
            zeroRecords: "Không tìm thấy kết quả phù hợp"
        }
    });

    new DataTable('#exampleDaXepLop', {
        columnDefs: [
            { targets: 0, searchable: true },
            { targets: [1, 2], searchable: false }
        ],
        language: {
            search: "<i class='fa-solid fa-search'></i> Tìm kiếm:",
            lengthMenu: "Hiển thị _MENU_ dòng",
            info: "Hiển thị _START_ đến _END_ của _TOTAL_ dòng",
            paginate: { previous: "Trước", next: "Sau" },
            zeroRecords: "Không tìm thấy kết quả phù hợp"
        }
    });
</script>
