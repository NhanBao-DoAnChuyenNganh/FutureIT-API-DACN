<body>
    <header>
        <!-- Header Start -->
        <div class="header-area">
            <div class="main-header">
                <div class="header-top d-none d-lg-block">
                    <!-- Left Social -->
                    <div class="header-left-social">
                        <ul class="header-social">
                            <li>
                                <a href="https://x.com/"><i class="fab fa-twitter"></i></a>
                            </li>
                            <li>
                                <a href="https://www.facebook.com/">
                                    <i class="fab fa-facebook-f"></i>
                                </a>
                            </li>
                            <li>
                                <a href="https://www.linkedin.com/"><i class="fab fa-linkedin-in"></i></a>
                            </li>
                            <li>
                                <a href="https://www.google.com/"><i class="fab fa-google-plus-g"></i></a>
                            </li>
                        </ul>
                    </div>
                    <div class="container">
                        <div class="col-xl-12">
                            <div class="row d-flex justify-content-center align-items-center">
                                <div class="col-6 d-flex">
                                    <div class="header-info-left">
                                        <ul>
                                            <li>futureit@gmail.com</li>
                                            <li>099 8899 0888</li>
                                        </ul>
                                    </div>
                                </div>
                                <div class="col-6 d-flex">
                                    <div class="header-info-right">
                                        <partial name="_LoginPartial" />
                                    </div>
                                </div>
                                
                                
                            </div>
                        </div>
                    </div>
                </div>
                <div class="header-bottom header-sticky">
                    <!-- Logo -->
                    <div class="logo d-none d-lg-block">
                        <a href="index.html">
                            <img src="~/img/logo/logo.png" alt="" />
                        </a>
                    </div>
                    <div class="container">
                        <div class="menu-wrapper">
                            <!-- Logo -->
                            <div class="logo logo2 d-block d-lg-none">
                                <a href="index.html">
                                    <img src="~/img/logo/logo.png" alt="" />
                                </a>
                            </div>
                            <!-- Main-menu -->
                            <div class="main-menu d-none d-lg-block">
                                <nav>
                                    <ul id="navigation">
                                        <li><a asp-controller="StudentHome" asp-action="Index">Trang Chủ</a></li>
                                        <li><a asp-controller="StudentHome" asp-action="About">Về Chúng Tôi</a></li>
                                        <li><a asp-controller="StudentHome" asp-action="KhoaHoc">Khóa Học</a></li>
                                        <li><a asp-controller="StudentHome" asp-action="Teacher">Giáo Viên</a></li>
                                        <li><a asp-controller="StudentHome" asp-action="TinTucTuyenDung">Tuyển Dụng</a></li>
                                        <li><a asp-controller="StudentHome" asp-action="KhoaHocDaDangKy">Học Tập</a></li>

                                    </ul>
                                </nav>
                            </div>
                            <!-- Header-btn -->
                            <div class="header-search d-none d-lg-block">
                                <form asp-action="TimKiemKhoaHoc" class="form-box f-right">
                                    <input type="text"
                                           name="Search"
                                           placeholder="Tìm khóa học..." required 
                                           oninvalid="this.setCustomValidity('Vui lòng không để trống trường này')"
                                           oninput="setCustomValidity('')" />
                                    <button type="submit" class="search-icon"
                                            style="background: none; border: none; padding: 0; cursor: pointer;">
                                            <i class="fas fa-search special-tag"></i>
                                    </button>
                                </form>
                            </div>
                        </div>
                        <!-- Mobile Menu -->
                        <div class="col-12">
                            <div class="mobile_menu d-block d-lg-none"></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </header>
    <!-- Header End -->



    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <style>
        .social-icon {
            width: 60px;
            height: 60px;
