<div class="container my-5">
    <h4 class="fw-bold mb-3 text-secondary">Đánh giá khóa học</h4>
    @if (Model.dsDanhGia != null && Model.dsDanhGia.Any())
    {
        <div class="mb-4">
            <div style="max-height: 400px; overflow-y: auto;" class="mb-4 pe-2">
                @foreach (var dg in Model.dsDanhGia)
                {
                    <div class="card mb-3 shadow-sm">
                        <div class="card-body">
                            <div class="d-flex align-items-start mb-2">
                                <img src="data:image/png;base64,@Convert.ToBase64String(dg.User.Avatar)"
                                     class="rounded-circle me-3" style="width: 50px; height: 50px;" />

                                <div>
                                    <strong class="d-block">@dg.User.HoTen</strong>
                                    <small class="text-muted">@dg.NgayDanhGia.ToString("dd/MM/yyyy")</small>
                                </div>

                                <button class="btn btn-sm btn-outline-danger position-absolute"
                                        style="top: 20px; right: 10px;"
                                        title="Báo cáo đánh giá này"
                                        onclick="baoCaoDanhGia('@dg.MaDanhGia')">
                                    <i class="fa-solid fa-flag"></i>
                                </button>
                            </div>
                            <div class="text-warning mb-1">
                                @for (int i = 1; i <= dg.SoSaoDanhGia; i++)
                                {
                                    <i class="fa-solid fa-star"></i>
                                }
                                @for (int i = dg.SoSaoDanhGia + 1; i <= 5; i++)
                                {
                                    <i class="fa-regular fa-star"></i>
                                }
                            </div>
                            <p>@dg.NoiDungDanhGia</p>
                        </div>
                    </div>
                }
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-info">Khóa học hiện đang không có đánh giá nào!</div>
    }
</div>

<div id="form-bao-cao" class="container my-5 d-none">
    <div class="card border-danger shadow-sm">
        <div class="card-header bg-danger text-white fw-bold">
            Tố cáo đánh giá
        </div>
        <div class="card-body">

            <!-- copy comment bị tố cáo -->
            <div class="card mb-4 shadow-sm bg-light">
                <div class="card-body" id="commentCopy">
                </div>
            </div>

            <form method="post" asp-action="BaoCaoDanhGia">
                <input type="hidden" name="MaDanhGia" id="inputMaDanhGia" />
                <input type="hidden" name="MaKhoaHoc" value="@Model.KhoaHocCanXem.MaKhoaHoc"></input>
                <div class="mb-3">
                    <label for="LyDo" class="form-label fw-semibold">Lý do tố cáo:</label>
                    <textarea class="form-control" name="LyDo" id="LyDo" rows="3" required></textarea>
                </div>

                <div class="text-end">
                    <button type="button" class="btn btn-secondary me-2" onclick="dongFormBaoCao()">Hủy</button>
                    <button type="submit" class="btn btn-danger fw-bold">Gửi tố cáo</button>
                </div>
            </form>
        </div>
    </div>
</div>


<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
<script>
    

    function changeImage(event, src) {
            document.getElementById('mainImage').src = src;
            document.querySelectorAll('.thumbnail').forEach(thumb => thumb.classList.remove('active'));
            event.target.classList.add('active');
        }

        const CheckDaDangNhap = @(User.Identity.IsAuthenticated.ToString().ToLower());

        document.addEventListener("DOMContentLoaded", function () {
        const btn = document.getElementById("btn-yeuthich");

        btn.addEventListener("click", function () {
            if (!CheckDaDangNhap) {
                Swal.fire({
                    icon: 'warning',
                    title: 'Vui lòng đăng nhập!',
                    text: 'Bạn hãy đăng nhập để quan tâm khóa học này.',
                    confirmButtonText: 'OK',
                    confirmButtonColor: '#3085d6'
                });
                return;
            }
            const khoaHocId = btn.getAttribute("data-id");

            // đổi design
            const icon = btn.querySelector("i");
            const text = btn.querySelector(".text");

             btn.classList.toggle("btn-outline-secondary");
             btn.classList.toggle("btn-danger");

            // Chỉ thêm text-light nếu là btn-danger
            if (btn.classList.contains("btn-danger")) {
                btn.classList.add("text-light");
                text.textContent = "Đã quan tâm";
            } else {
                btn.classList.remove("text-light");
                text.textContent = "Quan tâm khóa học này";
            }

            icon.classList.toggle("bi-heart");
            icon.classList.toggle("bi-heart-fill");

            //ajax
            fetch(`/Student/StudentHome/ThemVaoDSQuanTam?MaKhoaHoc=${khoaHocId}`)
                .catch(() => alert("Có lỗi xảy ra"));
        });
    });


    $(document).ready(function () {
    @if (TempData["ThongBaoDangKy"] != null)
    {
        <text>
                            Swal.fire({
                                toast: true,
                                position: 'bottom-end',
                                icon: 'success',
                                title: '@Html.Raw(TempData["ThongBaoDangKy"])',
                                showConfirmButton: false,
                                timer: 4000,
                                timerProgressBar: true,
                                background: '#f0fff0',
                                color: '#2f855a',
                                iconColor: '#38a169',
                                didOpen: (toast) => {
                                    toast.addEventListener('mouseenter', Swal.stopTimer)
                                    toast.addEventListener('mouseleave', Swal.resumeTimer)
                                }
                            });
        </text>
    }
    });

    function baoCaoDanhGia(maDanhGia) {
        const CheckDaDangNhap = @(User.Identity.IsAuthenticated.ToString().ToLower());
        if (!CheckDaDangNhap) {
                Swal.fire({
                    icon: 'info',
                    title: 'Vui lòng đăng nhập!',
                    text: 'Bạn hãy đăng nhập để báo cáo bình luận này.',
                    confirmButtonText: 'OK',
                    confirmButtonColor: '#3085d6'
                });
                return;
            }
        const cardBody = event.target.closest(".card-body");

        // Clone đánh giá vào form
        const clone = cardBody.cloneNode(true);

        // Xóa nút tố cáo trong bản clone
        const button = clone.querySelector("button");
        if (button) button.remove();

        // Gán nội dung vào form
        document.getElementById("commentCopy").innerHTML = "";
        document.getElementById("commentCopy").appendChild(clone);

        // Gán mã đánh giá
        document.getElementById("inputMaDanhGia").value = maDanhGia;

        // Hiển thị form
        document.getElementById("form-bao-cao").classList.remove("d-none");
        document.getElementById("form-bao-cao").scrollIntoView({ behavior: "smooth" });
    }

    function dongFormBaoCao() {
        document.getElementById("form-bao-cao").classList.add("d-none");
        document.getElementById("LyDo").value = "";
        document.getElementById("inputMaDanhGia").value = "";
        document.getElementById("commentCopy").innerHTML = "";
    }


    document.addEventListener("DOMContentLoaded", function () {
            const alertTitle = '@TempData["Title"]';
            const alertType = '@TempData["Type"]';
            const alertMessage = '@TempData["Message"]';

            if (alertMessage) {
                Swal.fire({
                    icon: alertType,
                    title: alertTitle,
                    html: alertMessage,
                    confirmButtonText: 'Đóng',
                    timer: 3000,
                    timerProgressBar: true
                });
            }
        });

        //Thông báo trạng thái đóng tiền momo
        document.addEventListener("DOMContentLoaded", function () {
            const momoSuccess = @Html.Raw(Json.Serialize(TempData["MomoSuccess"]));
            if (momoSuccess) {
                let timerInterval;
                Swal.fire({
                    title: 'Thành công!',
                    html: momoSuccess,
                    icon: 'success',
                    timer: 4000,
                    timerProgressBar: true,
                    didOpen: () => {
                        const swalContainer = Swal.getPopup();
                        const swalTimer = Swal.getTimerLeft();

                        swalContainer.addEventListener('mouseenter', Swal.stopTimer);
                        swalContainer.addEventListener('mouseleave', Swal.resumeTimer);
                    }
                });
            }
        });

        document.addEventListener("DOMContentLoaded", function () {
            const momoCancel = "@TempData["MomoCancel"]";
            if (momoCancel) {
                let timerInterval;
                Swal.fire({
                    title: 'Hủy thanh toán!',
                    html: momoCancel,
                    icon: 'error',
                    timer: 4000,
                    timerProgressBar: true,
                    didOpen: () => {
                        const swalContainer = Swal.getPopup();
                        const swalTimer = Swal.getTimerLeft();

                        swalContainer.addEventListener('mouseenter', Swal.stopTimer);
                        swalContainer.addEventListener('mouseleave', Swal.resumeTimer);
                    }
                });
            }
        });

        

        //Thông báo trạng thái đóng tiền vnpay
        document.addEventListener("DOMContentLoaded", function () {
            const VnpaySuccess = @Html.Raw(Json.Serialize(TempData["VnpaySuccess"]));
            if (VnpaySuccess) {
                let timerInterval;
                Swal.fire({
                    title: 'Thành công!',
                    html: VnpaySuccess,
                    icon: 'success',
                    timer: 4000,
                    timerProgressBar: true,
                    didOpen: () => {
                        const swalContainer = Swal.getPopup();
                        const swalTimer = Swal.getTimerLeft();

                        swalContainer.addEventListener('mouseenter', Swal.stopTimer);
                        swalContainer.addEventListener('mouseleave', Swal.resumeTimer);
                    }
                });
            }
        });

        document.addEventListener("DOMContentLoaded", function () {
            const VnpayCancel = @Html.Raw(Json.Serialize(TempData["VnpayCancel"]));
            if (VnpayCancel) {
                let timerInterval;
                Swal.fire({
                    title: 'Hủy thanh toán!',
                    html: VnpayCancel,
                    icon: 'error',
                    timer: 4000,
                    timerProgressBar: true,
                    didOpen: () => {
                        const swalContainer = Swal.getPopup();
                        const swalTimer = Swal.getTimerLeft();

                        swalContainer.addEventListener('mouseenter', Swal.stopTimer);
                        swalContainer.addEventListener('mouseleave', Swal.resumeTimer);
                    }
                });
            }
        });

        //Có khóa học trùng
        document.addEventListener("DOMContentLoaded", function () {
            const RegisterFail = @Html.Raw(Json.Serialize(TempData["RegisterFail"]));
            if (RegisterFail) {
                Swal.fire({
                    title: 'Đăng ký bị trùng giờ học!',
                    html: RegisterFail,
                    icon: 'error',
                    width: '700px',
                    confirmButtonText: 'Đóng',
                });
            }
        });
</script>