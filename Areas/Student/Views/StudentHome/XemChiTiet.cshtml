<style>
    .product-image {
        width: 100%;
        height: 320px;
    }

    .thumbnail {
        width: 130px;
        height: 100px;
        cursor: pointer;
        border: 0.5px solid #ddd;
        opacity: 0.6;
        transition: opacity 0.3s ease;
    }

        .thumbnail:hover, .thumbnail.active {
            opacity: 1;
        }

    .star-rating {
        display: flex;
        justify-content: center;
        direction: rtl;
    }

        .star-rating input {
            display: none;
        }

        .star-rating label {
            font-size: 2.5rem;
            color: #ccc;
            cursor: pointer;
            transition: color 0.2s;
        }

            .star-rating label:hover,
            .star-rating label:hover ~ label {
                color: gold;
            }

        /*khi checked -> tô màu từ trái đến phải */
        .star-rating input:checked ~ label {
            color: gold;
        }

            /*reset màu cho những label sau radio được checked */
            .star-rating input:checked ~ label ~ label {
                color: #ccc;
            }
</style>

<div class="container mt-5">
    <div class="row">

        <div class="col-md-6 mb-4">
            @if (Model.listHinh != null && Model.listHinh.Any())
            {
                <img src="data:image/jpg;base64,@Convert.ToBase64String(Model.listHinh[0].NoiDungHinh)" class="img-fluid rounded mb-3 product-image" id="mainImage" />

                <div class="d-flex justify-content-between">
                    @for (int i = 0; i < Model.listHinh.Count; i++)
                    {
                        <img src="data:image/jpg;base64,@Convert.ToBase64String(Model.listHinh[i].NoiDungHinh)" class="thumbnail rounded @(i == 0 ? "active" : "")"
                             onclick="changeImage(event, this.src)" />
                    }
                </div>
            }
            else
            {
                <div class="alert alert-warning">Khóa học hiện chưa cập nhật hình ảnh</div>
            }
        </div>


        <div class="col-md-6">
            <h2 class="mb-3 text-primary">@Model.KhoaHocCanXem.TenKhoaHoc - @Model.KhoaHocCanXem.NgayHoc</h2>
            <div class="mb-3">
                <span class="h4 me-2 text-danger fw-bold">@Model.KhoaHocCanXem.HocPhi.ToString("N0") VND</span>
            </div>
            <div class="mb-3">
                @for (int i = 1; i <= 5; i++)
