<style>
    body {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .tieu_de {
        padding: 100px 0px;
        background-color: darkblue;
        color: white;
        font-size: 70px;
        font-weight: bold;
    }

    .hover-effect {
        transition: all 0.3s ease-in-out;
        transform-origin: center;
    }

        .hover-effect:hover {
            transform: scale(1.1);
            z-index: 10;
            box-shadow: 0 10px 20px rgba(0,0,0,0.2);
            cursor: pointer;
        }

    .card {
        border: 0.5px solid #ddd;
    }

    .nav-link:hover {
        background-color: #d1e7dd;
        color: #0f5132 !important;
        border-radius: 0.375rem;
        transition: all 0.3s ease-in-out;
        cursor: pointer;
    }
</style>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css">

@model DoAnCoSo_Web.Areas.Student.ViewModels.KhoaHocViewModels

<div class="slider-area">
    <div class="slider-height2 d-flex align-items-center">
        <div class="container">
            <div class="row">
                <div class="col-xl-12">
                    <div class="hero-cap hero-cap2 text-center">
                        <h2>Khóa học yêu thích</h2>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<section class="all-course">
    <div class="container">
        @if (!Model.listKhoaHoc.Any())
        {
            <div class="row text-center mt-5 fs-5 font-italic">
                <div>Bạn chưa có khóa học nào trong danh sách yêu thích.</div>
                <div><a class="btn btn-primary text-light mt-5" asp-action="KhoaHoc" asp-controller="StudentHome">Xem tất cả khóa học</a></div>
            </div>
        }
        else
        {
            <div class="row">
                @foreach (var item in Model.listKhoaHoc)
                {
                    var kh = item.KhoaHoc;

                    <div class="col-4 p-2" id="khoahoc-@kh.MaKhoaHoc">
                        <div class="card hover-effect" style="width:300px; height: 450px;">
                            <a asp-action="XemChiTiet" asp-route-id="@kh.MaKhoaHoc" style="text-decoration: none; color: inherit;">
                                <div class="text-center">
                                    <img class="card-img-top rounded-2" src="data:image/jpg;base64,@Convert.ToBase64String(kh.HinhAnhKhoaHoc.FirstOrDefault(p => p.LaAnhDaiDien == true && p.KhoaHocMaKhoaHoc == kh.MaKhoaHoc).NoiDungHinh)" style="width: 300px; height: 200px;" />
                                </div>
                                <div class="card-body pt-2 pb-0">
                                    <h5 class="card-title text-primary">@kh.TenKhoaHoc - @kh.NgayHoc</h5>

                                    <div class="d-flex justify-content-between align-items-center mt-2">
                                        <div class="text-warning">
                                            @for (int i = 1; i <= 5; i++)
                                            {
                                                if (item.SoSaoTrungBinh >= i)
                                                {
                                                    <i class="fa-solid fa-star text-warning"></i>
                                                }
                                                else if (item.SoSaoTrungBinh >= i - 0.5)
                                                {
                                                    <i class="fa-solid fa-star-half-stroke text-warning"></i>
                                                }
                                                else
                                                {
                                                    <i class="fa-regular fa-star text-warning"></i>
                                                }
                                            }
                                        </div>
                                        <div class="text-muted fs-6">@item.TongLuotBinhLuan đánh giá</div>
                                    </div>

                                    <div class="d-flex justify-content-between align-items-center text-muted mt-3 px-1">
                                        <span class="ms-1">
                                            <i class="fa-regular fa-heart me-1 text-danger"></i>@item.TongLuotQuanTam
                                        </span>
                                        <span class="text-danger fw-bold fs-5 me-1">@kh.HocPhi.ToString("N0") VND</span>
                                    </div>
                                </div>
                            </a>
                            <div class="text-center mt-2 mb-3">
                                <button class="btn btn-primary text-light fw-bold btn-bo-yeu-thich rounded-1" data-id="@kh.MaKhoaHoc">
                                    <i class="fa-solid fa-heart-crack"></i> Bỏ yêu thích
                                </button>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
    </div>

</section>

<script>
    document.addEventListener("DOMContentLoaded", function () {
        const buttons = document.querySelectorAll(".btn-bo-yeu-thich");

        buttons.forEach(button => {
            button.addEventListener("click", function () {
                const maKhoaHoc = this.getAttribute("data-id");
                const card = document.getElementById("khoahoc-" + maKhoaHoc);

                Swal.fire({
                    title: 'Ngừng quan tâm khóa học này?',
                    text: "Danh sách quan tâm của bạn sẽ không hiển thị khóa học này nữa!",
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonColor: '#3085d6',
                    cancelButtonColor: '#d33',
                    confirmButtonText: 'Xóa!',
                    cancelButtonText: 'Hủy'
                }).then((result) => {
                    if (result.isConfirmed) {
                        fetch(`/Student/StudentHome/ThemVaoDSQuanTam?MaKhoaHoc=${maKhoaHoc}`)
                            .then(response => response.json())
                            .then(data => {
                                if (data.success) {
                                    card.style.transition = "opacity 0.5s ease";
                                    card.style.opacity = 0;
                                    setTimeout(() => {
                                        card.remove();
                                    }, 500);

                                    Swal.fire(
                                        'Hoàn thành!',
                                        'Khóa học đã được loại khỏi danh sách quan tâm của bạn.',
                                        'success'
                                    );
                                } else {
                                    Swal.fire(
                                        'Lỗi!',
                                        'Không thể xóa khóa học. Vui lòng thử lại.',
                                        'error'
                                    );
                                }
                            })
                            .catch(() => {
                                Swal.fire(
                                    'Lỗi mạng!',
                                    'Không thể kết nối máy chủ.',
                                    'error'
                                );
                            });
                    }
                });
            });
        });
    });
</script>
