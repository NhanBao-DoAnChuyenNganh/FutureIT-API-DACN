@model DoAnCoSo_Web.Models.User
@{
    ViewData["Title"] = "Chỉnh sửa thông tin giáo viên";
}

<style>
    .avatar-img:hover {
        transform: scale(1.05);
        transition: transform 0.3s ease;
    }
</style>

<div class="container mt-5">
    <div class="card shadow">
        <div class="card-header bg-warning text-dark">
            <h4 class="mb-0">Chỉnh sửa chuyên ngành giáo viên</h4>
        </div>
        <div style="background: linear-gradient(140deg, #fff3cd 0%, #ffeeba 50%, #fff3cd 100%);" class="card-body p-4">
            <div class="row">
                <div class="col-md-4 text-center">
                    <img src="@(Model.Avatar != null ? $"data:image/png;base64,{Convert.ToBase64String(Model.Avatar)}" : "/image/avatar.png")"
                         alt="Avatar"
                         class="img-thumbnail rounded-circle avatar-img"
                         style="width: 200px; height: 200px; object-fit: cover;" />
                </div>
                <div class="col-md-8">
                    <h2 class="mb-4">@Model.HoTen</h2>
                    <form asp-action="EditTeacher" method="post">
                        <input type="hidden" name="id" value="@Model.Id" />

                        <div class="form-group mb-3">
                            <label for="ChuyenNganhMaChuyenNganh"><strong>Chuyên ngành:</strong></label>
                            <select class="form-control" id="ChuyenNganhMaChuyenNganh" name="ChuyenNganhMaChuyenNganh" asp-items="ViewBag.ListChuyenNganh">
                                <option value="">-- Chọn chuyên ngành --</option>
                            </select>
                        </div>

                        <div class="mt-4">
                            <a asp-action="QuanLyTeacher" asp-controller="AdminHome" class="btn btn-secondary">Quay lại</a>
                            <button type="submit" class="btn btn-success">Lưu thay đổi</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
