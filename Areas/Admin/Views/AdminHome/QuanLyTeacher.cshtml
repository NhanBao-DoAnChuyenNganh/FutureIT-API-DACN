@model IEnumerable<dynamic>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
<style>
    .table {
        width: 100%;
        border-collapse: collapse;
        font-family: Arial, sans-serif;
        margin: 20px 0;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

        .table th, .table td {
            padding: 12px;
            text-align: left;
            border-bottom: 1px solid #ddd;
        }

        .table th {
            background-color: #007BFF; /* Changed from green (#4CAF50) to blue */
            color: white;
            text-transform: uppercase;
            font-weight: bold;
        }

        .table tbody tr:hover {
            background-color: #f5f5f5;
        }

        .table td {
            color: #333;
        }

        .table tbody tr:nth-child(even) {
            background-color: #f9f9f9;
        }

    h2 {
        text-align: center;
        background-color: #007BFF;
        color: white;
        padding: 10px 15px;
        margin: 0 0 20px 0;
    }
</style>
<h2>Các giáo viên</h2>
<div class="container">
    <a asp-action="Index2" asp-controller="AdminHome" class="btn btn-secondary mb-3">Quay lại</a>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th style="width:20%">Mã giáo viên</th>
                <th style="width:20%">Họ Tên</th>
                <th style="width:20%">Ảnh</th>
                <th style="width:20%">Chuyên ngành</th>
                <th style="width:20%">Chức năng</th>

            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td style="text-align: center">@item.Id</td>
                    <td style="text-align: center">@item.HoTen</td>
                    <td style="text-align: center">
                        <img src="@item.Avatar" alt="Avatar" width="50" height="50" style="text-align:center; border-radius: 50%;" />
                    </td>

                    <td style="text-align: center">@item.ChuyenNganh</td>
                    <td>
                        <a asp-action="EditTeacher" asp-controller="AdminHome" asp-route-id="@item.Id" class="btn btn-info btn-sm">Chỉnh sửa</a>

                        <a asp-action="DisplayTeacher" asp-controller="AdminHome" asp-route-id="@item.Id" class="btn btn-info btn-sm">Xem chi tiết</a>
                        @if (!item.IsApproved)
                        {
                            <form asp-action="ApproveUser" asp-controller="AdminHome" method="post" style="display:inline">
                                <input type="hidden" name="userId" value="@item.Id" />
                                <button type="submit" class="btn btn-sm btn-outline-success">Duyệt</button>
                            </form>
                            <form asp-action="RejectUser" asp-controller="AdminHome" method="post" style="display:inline" onsubmit="return confirm('Bạn có chắc muốn từ chối tài khoản này?');">
                                <input type="hidden" name="userId" value="@item.Id" />
                                <button type="submit" class="btn btn-sm btn-outline-danger">Từ chối</button>
                            </form>
                            }
                            else
                            {
                                @if (item.IsMainAdmin)
                                {
                                    <span class="text-muted fst-italic">Không thể thao tác vì đây là admin gốc</span>
                                }
                                else
                                {
                                    @if (!item.IsBanned)
                                    {
                                        <form asp-action="BanUser" asp-controller="AdminHome" method="post" style="display:inline" onsubmit="return confirm('Bạn có chắc chắn muốn cấm người dùng này không?');">
                                            <input type="hidden" name="userId" value="@item.Id" />
                                            <button type="submit" class="btn btn-sm btn-outline-danger">Cấm</button>
                                        </form>
                                    }
                                    else
                                    {
                                        <form asp-action="UnBanUser" asp-controller="AdminHome" method="post" style="display:inline" onsubmit="return confirm('Bạn có chắc muốn gỡ cấm người dùng này không?');">
                                            <input type="hidden" name="userId" value="@item.Id" />
                                            <button type="submit" class="btn btn-sm btn-outline-success">Gỡ cấm</button>
                                        </form>
                                    }
                                }
                            }                        
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>