@page
@model DoAnCoSo_Web.Areas.Admin.Pages.Users.AddUserModel
@{
    ViewData["Title"] = "Thêm người dùng";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <title>@ViewData["Title"]</title>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
</head>
<body style="background: linear-gradient(140deg, rgba(179, 217, 255, 1) 0%, rgba(153, 204, 255, 1) 50%, rgba(128, 191, 255, 1) 100%); min-height: 100vh; display: flex; align-items: center;">
    <div class="container py-4">
        <div class="row justify-content-center">
            <div class="col-lg-10">
                <div class="card shadow-lg border-0 rounded-4 bg-white">
                    <div class="card-body p-4">
                        <h2 class="text-center mb-3 fw-bold text-primary">Tạo tài khoản mới</h2>
                        <hr class="mb-3" />
                        <form method="post" enctype="multipart/form-data">
                            <div asp-validation-summary="ModelOnly" class="text-danger mb-3 text-center" role="alert"></div>

                            <div class="row g-3">
                                <div class="col-md-6">
                                    <label asp-for="Input.HoTen" class="form-label fw-medium">Họ và tên</label>
                                    <input asp-for="Input.HoTen" class="form-control" placeholder="Họ tên" />
                                    <span asp-validation-for="Input.HoTen" class="text-danger"></span>
                                </div>
                                <div class="col-md-6">
                                    <label asp-for="Input.Email" class="form-label fw-medium">Email</label>
                                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="row g-3">
                                <div class="col-md-6">
                                    <label asp-for="Input.SDT" class="form-label fw-medium">Số điện thoại</label>
                                    <input asp-for="Input.SDT" class="form-control" placeholder="Số điện thoại" />
                                    <span asp-validation-for="Input.SDT" class="text-danger"></span>
                                </div>
                                <div class="col-md-6">
                                    <label asp-for="Input.DiaChi" class="form-label fw-medium">Địa chỉ</label>
                                    <input asp-for="Input.DiaChi" class="form-control" placeholder="Địa chỉ" />
                                    <span asp-validation-for="Input.DiaChi" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="row g-3">
                                <div class="col-md-6">
                                    <label asp-for="Input.Password" class="form-label fw-medium">Mật khẩu</label>
                                    <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="Mật khẩu" />
                                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                                </div>
                                <div class="col-md-6">
                                    <label asp-for="Input.ConfirmPassword" class="form-label fw-medium">Xác nhận mật khẩu</label>
                                    <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="Xác nhận mật khẩu" />
                                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="row g-3">
                                <div class="col-md-6">
                                    <label asp-for="Input.Role" class="form-label fw-medium">Bạn là</label>
                                    <select asp-for="Input.Role" asp-items="@Model.Input.RoleList" class="form-select">
                                        <option disabled selected>Chọn role</option>
                                    </select>
                                    <span asp-validation-for="Input.Role" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="row g-3 mt-3">
                                <div class="col-12">
                                    <button id="registerSubmit" type="submit" class="btn w-100 py-2 fw-bold shadow-sm"
                                            style="background-color: #339CFF; color: white; border: none;">
                                        Thêm người dùng
                                    </button>
                                </div>
                            </div>
                            <div class="row g-3 mt-3">
                                <div class="col-12">
                                    <a asp-area="Admin" asp-controller="AdminHome" asp-action="Index"
                                       class="btn w-100 py-2 fw-bold shadow-sm"
                                       style="background-color: #339CFF; color: white; border: none; text-align: center; display: inline-block;">
                                        Huỷ
                                    </a>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>

    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }
</body>
</html>